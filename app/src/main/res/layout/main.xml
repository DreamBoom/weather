<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.Main">
<TextView
    android:id="@+id/bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<LinearLayout
    android:paddingStart="15dp"
    android:background="@color/blue"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="55dp"
        android:id="@+id/tab1"
        android:src="@mipmap/icon1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/tab2"
        android:src="@mipmap/icons2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/tab3"
        android:src="@mipmap/icons3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/tab4"
        android:src="@mipmap/icons4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/tab5"
        android:src="@mipmap/icons5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/tab6"
        android:src="@mipmap/icons6"
        android:layout_width="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
    <yfkj.weatherstation.view.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />
</LinearLayout>