<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="@drawable/bg_bg"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="历史记录"
        android:textColor="@color/black3"
        android:textSize="@dimen/size18" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/data_list"
        android:layout_below="@+id/t1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/pageUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/pageUp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/bg_blue"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/pageNum"
        android:paddingStart="15dp"
        android:layout_marginBottom="10dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        android:text="上一页"
        android:textColor="@color/white"
        android:textSize="@dimen/size15" />

    <TextView
        android:id="@+id/pageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="0/0"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black3"
        android:textSize="@dimen/size16" />

    <TextView
        android:id="@+id/pageDown"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/pageNum"
        android:paddingStart="15dp"
        android:background="@drawable/bg_blue"
        android:paddingEnd="15dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="下一页"
        android:textColor="@color/white"
        android:textSize="@dimen/size15" />
</RelativeLayout>
</RelativeLayout>
