<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/time"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/kw"
        android:text="空温："
        android:drawableStart="@mipmap/cs1"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ks"
        android:text="空湿："
        android:drawableStart="@mipmap/cs2"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tw"
        android:text="土温："
        android:drawableStart="@mipmap/cs1"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ts"
        android:text="土湿："
        android:drawableStart="@mipmap/cs2"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gz"
        android:drawableStart="@mipmap/cs5"
        android:drawablePadding="5dp"
        android:text="光照："
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/qy"
        android:text="气压："
        android:drawableStart="@mipmap/cs6"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/yl"
        android:text="雨量："
        android:drawableStart="@mipmap/cs7"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/zyl"
        android:text="当天雨量："
        android:drawableStart="@mipmap/cs7"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fx"
        android:text="风向："
        android:drawableStart="@mipmap/cs8"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fs"
        android:text="风速："
        android:drawableStart="@mipmap/cs9"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
